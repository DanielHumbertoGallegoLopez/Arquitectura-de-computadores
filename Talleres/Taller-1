	/*1. Hacer un programa la multiplicación de dos enteros sin signo usando solo sumas*/

int main(){
	int m, n, resultado; 
	cout<< "Ingresar numeros enteros para hacer la multiplicacion: ";

	cin>>m;
	cin>>n;
	
	resultado=0;
	
	for (int i=1; i=n; i++)
	{
		resultado=resultado+m;
	
	}
	
	cout<<"El resultado de la multiplicacion es: "<<resultado << endl;
}


	/*2. Realice un programa que calcule la potencia de dos números enteros sin signo realizando llamados a la función desarrollada en el punto 1.*/



	/*3. Realice un programa que calcule un polinomio de grado n, en donde los coeficientes del polinomio se encuentran almacenados en un vector 
	k de n+1 posiciones, de la siguientes forma: pol(x,k,n)=i=0nkixi, En donde el ki se encuentra en la posición k[i] del vector k.*/

int main()
{
   int n;
 
   cout<<"Ingresar el numero de coeficientes n";
   cin>>n;
 
   int k[i]; 
   int x;
 
   for (int i = 0; i < n; i++) 
   {
      cout<<"Coeficiente a["<<i<<"]=";
      cin>>k[i];
   }
 
   cout<<"Ingresar un valor para x";
   cin>>x;
 
   int valor_#=evalua(k, n, x);
   cout<<"Valor numerico p("<<x<<") = "<<valor_#<<endl;
 
   cin.get();
   cin.get();
   return 0;
}
 
int evalua(int k[], int n, int x) {
   int p = 0;
   for (int i = 0; i < n; i++) 
   {
      p = p + k[i] * pow(x, i);
   }
 
   return p;
}

	/*4. Realice un programa  que calcule el factorial de un número entero sin signo*/

int main() { 

	int factorial=0; 
	cout<<"Ingresar numero para calcular el factorial: "; 
	cin>>n;
	cin>>factorial; 

	int temp=factorial-1; 
	int resultado=factorial; 

	while (temp>=1) 
	{ 
		resultado=resultado*temp; 
		temp--; 
	} 
	cout<<"El factorial de ("<<n<<") es: "<<resultado<<end1; 
} 

	/*5. Realice un programa  calcule la división entera entre dos números enteros.*/

int main(){

	int divisor, dividendo, residuo, cociente=0; 
	cout<<"Ingresar el numero dividendo: "; 
	cin>>dividendo; 

	cout<<"Ingresar el numero divisor: "; 
	cin>>divisor; 

	while(dividendo>divisor)
	{ 
		dividendo=dividendo-divisor; 
		cociente=cociente+1; 
	} 

	residuo=dividendo; 
	cout<<"El resultado de la division es "<<cociente<<" y el residuo es "<<residuo;
	system("pause");
	return 0;
}